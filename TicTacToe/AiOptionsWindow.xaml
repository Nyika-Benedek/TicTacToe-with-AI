<Window x:Class="TicTacToe.AiOptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicTacToe"
        mc:Ignorable="d"
        Title="AiOptionsWindow" Height="135" Width="234"
        ResizeMode="NoResize">
    <Grid>
        <StackPanel>
            <RadioButton x:Name="random" GroupName="AiType">Random</RadioButton>
            <RadioButton x:Name="MinMax" GroupName="AiType">MinMax</RadioButton>
        </StackPanel>
        <Button Content="Save" HorizontalAlignment="Center" VerticalAlignment="Top" Height="37" Width="214" Click="Button_Click" Margin="0,50,0,0"/>
    </Grid>
</Window>
