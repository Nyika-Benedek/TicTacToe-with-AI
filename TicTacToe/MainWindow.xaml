        <ToolBar Grid.Row="0" VerticalAlignment="Bottom" Padding="0">
            <Button Content="New Game" Click="NewGame"/>
            <Button Content="Query" Click="Query"/>
        </ToolBar>

        <Canvas x:Name="canvas" Background="Black" Height="300" Width="300" MouseLeftButtonDown="CanvasClick">
            <!-- Vertical Lines >
            <Line X1="100" Y1="0" X2="100" Y2="300" Stroke="Green"/>
            <Line X1="200" Y1="0" X2="200" Y2="300" Stroke="Green"/>
            -->
            <!-- Horizontal Lines >
            <Line X1="0" Y1="100" X2="300" Y2="100" Stroke="Green"/>
            <Line X1="0" Y1="200" X2="300" Y2="200" Stroke="Green"/>
            -->
        </Canvas>
    </StackPanel>
</Window>
